<div class="nested-form-wrapper data-new-record="<%= form.object.new_record? %>>
  <div class="field">
    <%= form.label :product_id, "Product" %>
    <%= form.collection_select :product_id, Product.all, :id, :name, prompt: "Select a product" %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <%= button_tag 'Remove', type: 'button', data: { action: 'nested-form#remove' } %>
  <%= form.hidden_field :_destroy %>
</div>
